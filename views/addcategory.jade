doctype html
html(lang='en')
  head
    title AddQuestions
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/main2.css')
    script(src='/js/jquery.js')
    script(src='/js/popper.js')
    script(src='/js/bootstrap.js')
  body
    nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
      p
        a.navbar-brand(href='/admin/') QUIZAPP
      ul.navbar-nav
        li.nav-item
          p
            a.navbar-brand(href='/admin/') HOME
        li.nav-item
          p
            a.nav-link(href='#') ABOUT
        li.nav-item
          p
            a.nav-link(href='#') FAQ
    .login-block2
      .container
        .row
          p
            h1 Add Category
        .row
          form(action='/admin/addcat', method='post')
            .form-group
              input#que.form-control(name='cat', type='text', value='', placeholder='Enter Category')
            center
              button.btn.btn-danger(type='submit') Add
        .login-block1
          h1 Categories already present
          br
          each cat, i in cats
            h3 #{cat.cat}
            a.btn.btn-danger.removecat(data-id="#{cat._id}" href="") Delete
            br
  script(type='text/javascript').
    $(document).ready(function(){
        $('.removecat').click(function(e){
            deleteId=$(this).data('id');
            $.ajax({
                url:'/admin/deletecat/'+deleteId,
                type:'DELETE',
                success:function(data){
                        console.log(data);
                }
            });
            window.location = '/admin/addcat'
        });
    });
